class Solution {
    public String reverseWords(String s) {
        String[] arr = s.split(" ");
        String res = "";
        for(String str:arr){
            res += reverse(str) + " ";
        }
        return res.substring(0,res.length()-1);
    }
    public String reverse(String str){
        String temp = "";
        for(int i = 0;i < str.length();i++){
            temp = str.charAt(i) + temp;
        }
        return temp;
    }
}
